<div class="modal fade" id="spendingModal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <%=form_for [current_authenticatee, @wallet, @spending] do |f| %>

                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Add Spending</h4>
                </div>

                <div class="modal-body">
                    <div class='row'>
                        <div class='form-group col-md-4 col-sm-4 col-xs-4 col-lg-4'>
                            <%= f.label :nominal %><br/>
                            <%= f.text_field :nominal, class: 'form-control' %>
                        </div>

                        <div class='form-group col-md-4 col-sm-4 col-xs-4 col-lg-4'>
                            <%= f.label :spending_type %><br/>
                            <%= f.select :spending_type, [["Daily", 1],["Monthly", 2]], {}, {class: 'form-control'} %>
                        </div>

                        <div class='form-group col-md-4 col-sm-4 col-xs-4 col-lg-4'>
                            <%= f.label :tipe_transaksi %><br/>
                            <%= f.select :classification, [["Prioritas", true],["Non-Prioritas", false]], {}, {class: 'form-control'} %>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='form-group col-md-6 col-xs-6'>
                            <%= f.label :spending_time%> <br/>
                            <div class='input-group date' id='datetimepicker2'>
                                <%= f.text_field :spending_time, class: 'form-control' %>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                        </div>

                        <div class='form-group col-md-6 col-xs-6'>
                            <%= f.label :category %> <br/>
                            <%= f.select(:category,
                            Spending.categories.map {|k, v| [k, k]})%>

                        </div>
                    </div>

                    <div class='form-group'>
                        <%= f.label :description %><br/>
                        <%= f.text_area :description, class: 'form-control' %>
                    </div>
                </div>

                <div class="modal-footer">
                  <button class="btn btn-lg btn-blue btn-block" type="submit">Save</button>
                </div>
            <% end %>
        <!-- Modal content-->
        </div>
    </div>
<!-- div. modal -->
</div>
