<div id='header'>

    <div class='left-header'>
        <div class='branding'>
            <a class='logo' href='#'>
              <%=image_tag('big-logo.png', id: 'logo-header')%>
            </a>
        <!-- div .branding -->
        </div>
        <div class='main-links hidden-xs'>
            <%= link_to 'Dashboard', root_path%>
            <%= link_to 'Wallets', v1_user_wallet_path(current_authenticatee, current_authenticatee.wallets.first) %>
            <%=link_to 'News', v1_entries_path%>
            <a href="#">
                Promo
            </a>
        <!-- div .main-links -->
        </div>
    <!-- div .left-header -->
    </div>
    <div class='right-header pull-right'>

        <div class='notif-dropdown dropdown'>
            <a class-'dropdown-toggle dropdown-btn' data-toggle='dropdown' href='#' aria-expanded='false'>
                <i class='fa fa-bell head-icons'></i>
                <span class='caret'></span>
            </a>
        <!-- div .notif-dropdown -->
        </div>

        <div class='user-dropdown dropdown hidden-xs'>
            <a href='#' class='dropdown-toggle dropdown-btn' data-toggle="dropdown">
                <i class='fa fa-user head-icons'></i>
                <%=current_authenticatee.last_name%>
                <span class='caret'></span>
            </a>
            <ul class='dropdown-menu'>
                <li>
                    <%=link_to edit_v1_user_path(current_authenticatee) do %>
                        <i class='fa fa-user head-icons'></i>
                        Profile Settings
                    <% end %>
                </li>
                <li class='divider'></li>
                <li>
                    <%=link_to v1_auth_user_path(current_authenticatee), method: :delete do%>
                      <i class="fa fa-sign-out" aria-hidden="true"></i> Log Out
                    <% end %>
                </li>

            </ul>
        <!-- div .user-dropdown -->
        </div>

        <div class='mobile-dropdown dropdown'>
            <a href='#' class='dropdown-toggle' data-toggle="dropdown">
                <i class="fa fa-th" aria-hidden="true"></i>
            </a>
            <ul class=dropdown-menu>
                <li>
                    <%= link_to 'Dashboard', root_path%>
                </li>
                <li>
                    <%= link_to 'Wallets', v1_user_wallet_path(current_authenticatee, current_authenticatee.wallets.first) %>
                </li>
                <li>
                    <%=link_to 'News', v1_entries_path%>
                </li>
                <li>
                    <a href="#">
                        Promo
                    </a>
                </li>

                <li class='divider'></li>
                <li>
                  <a href='#'>
                    <i class='fa fa-user head-icons'></i>
                    Profile Settings
                  </a>
                </li>
                <li class='divider'></li>
                <li>
                    <%=link_to v1_auth_user_path(current_authenticatee), method: :delete do%>
                      <i class="fa fa-sign-out" aria-hidden="true"></i> Log Out
                    <% end %>
                </li>

            </ul>
        <!-- div .mobile-dropdown dropdown -->
        </div>
    <!-- div .right-header -->
    </div>

<!-- div #header -->
</div>
